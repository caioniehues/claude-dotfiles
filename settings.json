{
  "env": {
    "USE_BUILTIN_RIPGREP": 0,
    "BASH_DEFAULT_TIMEOUT_MS": "240000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR":1
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/guard-cd.sh", "timeout":10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/show-cwd.sh", "timeout":10
          }
        ]
      }
    ]
  },
  "parallelTasksCount": 5
}